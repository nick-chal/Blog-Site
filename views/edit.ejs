<% include partials/header.ejs%>

<div class="ui main fixed container segment">
    <div class="ui huge header">Edit Blog - <%= blog.title%></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label for="">Title</label>
            <input  type="text" name="blogName" value="<%=blog.title%>" required>
        </div>
        <div class="field">
            <label for="">Image </label>
            <input type="text" name="blogImage" value="<%=blog.image%>" >
        </div>
        <div class="field">
            <label for="">Blog Content</label>
            <textarea name="blogBody" required> <%= blog.body%></textarea>
        </div>
        <button class="ui blue basic button">Submit</button>
    </form>
</div>

