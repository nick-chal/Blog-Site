<%include partials/header%>
<div class="ui main text container">
    <div class="ui huge header">Here Are All The Blogs</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function (blog) { %>
            <div class="item">
                <a href="/blogs/<%=blog._id%>">
                    <div class="image">
                        <img src="<%= blog.image%>" >
                    </div>
                </a>
                <div class="content">
                    <h2 class="header"> <%= blog.title%></h2>
                    <div class="meta"><span> <%= blog.created.toDateString()%></span></div>
                    <div class="description"><p><%- blog.body.substring(0, 75)%><a class="mylink" href="/blogs/<%=blog._id%>">... Read More</p></div>
                   <!-- <div class="extra">
                        <a class="ui floated basic violet button" href="/blogs/<%=blog._id%>">
                            Read More
                            <i class="right chevron icon"></i>
                        </a>
                    </div>-->
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</div>

<%include partials/footer%>